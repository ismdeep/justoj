server {
	listen 80;
	root /var/www/public;
	index index.php;
	server_name _;
	access_log off;
	error_log off;

	location / {
		try_files $uri $uri/ =404;
		if (!-e $request_filename) {
			rewrite  ^(.*)$  /index.php?s=/$1  last;
		}
	}
	location ~\.php$ {
		include snippets/fastcgi-php.conf;
		fastcgi_pass unix:/var/run/php/php7.4-fpm.sock;
	}

	location ~/\.ht {
		deny all;
	}
}
